{
  "name": "sistema-inventario",
  "version": "1.0.0",
  "description": "Sistema de Inventario con Google Sheets",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "keywords": [
    "inventario",
    "electron",
    "googlesheets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "jspdf": "^4.1.0",
    "jspdf-autotable": "^5.0.7",
    "sql.js": "^1.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.inventario.app",
    "productName": "Sistema de Inventario",
    "directories": {
      "output": "dist"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "build/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}
